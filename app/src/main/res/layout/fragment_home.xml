<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_back"
    android:fillViewport="true">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.software1t.selldesk.common.view.ToolbarView
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="8dp"
            app:toolbar_news_btn_visibility="true"
            app:toolbar_title="@string/app_name" />

        <LinearLayout
            android:id="@+id/storyly_view_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="8dp"
            android:orientation="horizontal">

            <com.appsamurai.storyly.StorylyView
                android:id="@+id/storyly_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gl_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:elevation="8dp"
            app:columnCount="4"
            app:rowCount="2">

            <include
                android:id="@+id/button1"
                layout="@layout/view_square_linear_layout" />

            <include
                android:id="@+id/button2"
                layout="@layout/view_square_linear_layout" />

            <include
                android:id="@+id/button3"
                layout="@layout/view_square_linear_layout" />

            <include
                android:id="@+id/button4"
                layout="@layout/view_square_linear_layout" />

            <include
                android:id="@+id/button5"
                layout="@layout/view_square_linear_layout" />

            <include
                android:id="@+id/button6"
                layout="@layout/view_square_linear_layout" />

            <include
                android:id="@+id/button7"
                layout="@layout/view_square_linear_layout" />

            <include
                android:id="@+id/button8"
                layout="@layout/view_square_linear_layout" />
        </androidx.gridlayout.widget.GridLayout>

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/loading_pb"
            android:layout_width="match_parent"
            android:padding="8dp"
            android:layout_height="wrap_content"
            android:indeterminate="true" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_cars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="3"
            tools:listitem="@layout/item_car" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.core.widget.NestedScrollView>